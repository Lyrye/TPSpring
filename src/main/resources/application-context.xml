<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">



    <bean id="temperatureServiceBeanImpl" class="org.imt.nordeurope.jee.nickler.tpspring.TemperatureServiceBeanImpl" scope="singleton"/>

    <bean id="temperatureBeanImplFr" class="org.imt.nordeurope.jee.nickler.tpspring.TemperatureBeanImpl" scope="prototype">
        <property name="service" ref="temperatureServiceBeanImpl"/>
    </bean>
    <bean id="temperatureBeanImplEn" class="org.imt.nordeurope.jee.nickler.tpspring.TemperatureBeanImpl" scope="prototype">
        <property name="service" ref="temperatureServiceBeanImpl"/>
    </bean>
    <bean id="temperatureBeanImplDe" class="org.imt.nordeurope.jee.nickler.tpspring.TemperatureBeanImpl" scope="prototype">
        <property name="service" ref="temperatureServiceBeanImpl"/>
    </bean>

   <bean id="mainTemperature" class="org.imt.nordeurope.jee.nickler.tpspring.TemperatureMain">
        <property name="frBean" ref="temperatureBeanImplFr"/>
        <property name="deBean" ref="temperatureBeanImplDe"/>
        <property name="enBean" ref="temperatureBeanImplEn"/>
    </bean>
    <context:annotation-config/>
    <context:component-scan base-package="org.imt.nordeurope.jee.nickler.tpspring.Annotations"/>


</beans>
